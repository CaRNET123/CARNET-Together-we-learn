from kivymd.app import MDApp
from kivymd.uix.screen import Screen
from kivymd.uix.button import MDRectangleFlatButton
 
class Demo(MDApp):
 
    def build(self):
        screen = Screen()
         
        btn= MDRectangleFlatButton(text="LOGIN",pos_hint={'center_x':0.5,'center_y':0.2},on_release=self.btnfunc)
        screen.add_widget(btn)
        # adding widgets to scree
 
        btn2= MDRectangleFlatButton(text="REGISTER",pos_hint={'center_x':0.5,'center_y':0.4},on_release=self.btnfunc)
        screen.add_widget(btn2)
     
     
        return screen
    def btnfunc(self,obj):
        print("button is pressed!!")
    
if __name__=="__main__":
    Demo().run()
